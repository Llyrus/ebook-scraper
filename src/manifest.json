{
  "name": "Ebook Scraper",
  "version": "1.1.0",
  "description": "Save Ebook pages as a PDF",
  "manifest_version": 3,
  "background": {
    "scripts": [
      "js/eventPage.js"
    ],
    "persistent": true
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png"
  },
  "permissions": [
    "tabs",
    "declarativeContent",
    "storage",
    "unlimitedStorage",
    "downloads",
    "webRequest"
  ]
}