{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "../dist/js",
    "sourceMap": true,
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}